cd "@SOURCE_DIR@"

# [1] Normal patching
for I in "@PROJECT_SOURCE_DIR@"/qt5-[1-9]*.patch
do
	test -f "$I" && patch -p1 < "$I"
done

# [2] Customize build by removing and disabling subdirs.
for I in \
  qtactiveqt \
  qtdeclarative \
  qtdoc \
  qtgraphicaleffects \
  qtjsbackend \
  qtmultimedia \
  qtlocation \
  qtquick1 \
  qtquickcontrols \
  qtscript \
  qtsensors \
  qtserialport \
  qtwebkit \
  qtwebkit-examples \
  qtwebkit-examples-and-demos \
  qtxmlpatterns
do
       if [ -d "./$I" ]
       then
               rm -R "./$I"
       fi
done

# [3] MinGW on Windows issue
if [ ! -f qtbase/.gitignore ]
then
	touch qtbase/.gitignore
fi

# [4] Placeholder Makefile for initial "make confclean"
if [ ! -f "@BINARY_DIR@/qtbase/Makefile" ]
then
	mkdir -p "@BINARY_DIR@/qtbase"
	echo "confclean:" > "@BINARY_DIR@/qtbase/Makefile"
fi
