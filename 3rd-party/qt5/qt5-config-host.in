# Configure for host system of cross compilation
QT5_CONFIG_EXTRA_OPTS=
if [ -n "@CMAKE_HOST_APPLE@" ]
then
	QT5_CONFIG_EXTRA_OPTS="-no-framework"
elif [ -n "@CMAKE_HOST_UNIX@" ]
then
	QT5_CONFIG_EXTRA_OPTS="-rpath"
else
	QT5_CONFIG_EXTRA_OPTS="-no-rpath"
fi

"@SOURCE_DIR@/configure" \
  -opensource \
  -confirm-license \
  $QT5_CONFIG_EXTRA_OPTS \
  -prefix "@QT5_HOST_DIR@" \
  -release \
  -static \
  -gui \
  -widgets \
  -no-xcb \
  -qpa minimal \
  -no-qpa-platform-guard \
  -qt-sql-sqlite \
  -no-sql-db2 \
  -no-sql-ibase \
  -no-sql-mysql \
  -no-sql-oci \
  -no-sql-odbc \
  -no-sql-psql \
  -no-sql-sqlite2 \
  -no-sql-tds \
  -qt-zlib \
  -qt-libpng \
  -no-libjpeg \
  -no-gif \
  -no-openssl \
  -qt-pcre \
  -no-directfb \
  -no-linuxfb \
  -no-qml-debug \
  -no-javascript-jit \
  -no-cups \
  -no-opengl \
  -no-dbus \
  -no-accessibility \
  -no-fontconfig \
  -no-sm \
  -no-icu \
  -make libs \
  -make tools \
  -nomake examples \
  -nomake tests \
  -system-proxies \
  -no-glib \
  -no-audio-backend
