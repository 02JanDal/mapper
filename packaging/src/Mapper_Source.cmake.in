# At first, check that the working directory is clean.
message(STATUS "Checking git working directory")
execute_process(
  COMMAND "@GIT_EXECUTABLE@" status
  WORKING_DIRECTORY "@PROJECT_SOURCE_DIR@"
  OUTPUT_VARIABLE GIT_STATUS_OUTPUT
)
message(${GIT_STATUS_OUTPUT})
if(NOT GIT_STATUS_OUTPUT MATCHES "working directory clean")
	message(FATAL_ERROR "Source package must be created from a clean git working directory.")
endif()
message(STATUS "Checking git working directory - clean")

# Working directory is clean, now let git build the archive
message(STATUS "Creating @Mapper_Source_FILE_NAME@.@Mapper_Source_FORMAT@")
execute_process(
  COMMAND "@GIT_EXECUTABLE@" archive
    --format "@Mapper_Source_FORMAT@"
    --prefix "@Mapper_Source_FILE_NAME@/"
    --output "@PROJECT_BINARY_DIR@/@Mapper_Source_FILE_NAME@.@Mapper_Source_FORMAT@"
    HEAD
  WORKING_DIRECTORY "@PROJECT_SOURCE_DIR@"
)
